<div class="col-sm-8">
  <div id="customer-login">
    <div class="row">
      <div id="login" class="span7 form-horizontal">
        <h2 class="title">{{ 'customer.login.title' | t }}</h2>

        {% form 'customer_login' %}
        {{ form.errors | default_errors }}
        <div id="customer_email" class="form-group">
          <label for="customer_email" class="">{{ 'customer.login.email' | t }}</label>
          <input type="email" value="" name="customer[email]" id="customer_email" class="text form-control" />
        </div>

        {% if form.password_needed %}
        <div id="customer_password" class="form-group">
          <label for="customer_password" class="">{{ 'customer.login.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="text form-control" size="16" />
        </div>
        <a href="#" onclick="showRecoverPasswordForm();return false;">{{ 'customer.login.forgot_password' | t }}</a>
        {% endif %}

        <div class="action_bottom">
          <input class="btn btn-default" type="submit" value="{{ 'customer.login.sign_in' | t }}" /> {{ 'customer.general.or' | t }}
          <span class="note"><a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a></span>
        </div>
        {% endform %}
      </div>

      <div id="recover-password" style="display:none;" class="span7">
        <h2>{{ 'customer.login.reset_password' | t }}</h2>
        <p class="note">{{ 'customer.login.reset_password_subtext' | t }}</p>

        {% form 'recover_customer_password' %}
        {{ form.errors | default_errors }}

        <label for="email" class="">{{ 'customer.login.email' | t }}</label>
        <input type="email" value="" size="30" name="email" id="recover-email" class="text form-control" />
        <div class="action_bottom">
          <input class="btn btn-default" type="submit" value="{{ 'customer.login.submit_recover' | t }}" /> {{ 'customer.general.or' | t }}
          <span class="note"><a href="#" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.login.cancel' | t }}</a></span>
        </div>
        {% endform %}
      </div>

      {% if shop.checkout.guest_login %}
      <div id="guest" class="span5">
        <h2>{{ 'customer.login.guest_title' | t }}</h2>
        {% form 'guest_login' %}
        <input class="btn btn-default" type="submit" value="{{ 'customer.login.guest_continue' | t }}" />
        {% endform %}
      </div>
      {% endif %}

    </div>
  </div>
</div>
<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('login').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('login').style.display = 'block';
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
